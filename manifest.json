{
  "name": "Quick Tab Manager",
  "version": "0.5.0",
  "description": "Rearrange tabs using keyboard shortcuts",
  "author": "Originally Mohnish Thallavajhula, rewrite by Shaun Clowes",
  "manifest_version": 2,
  "short_name": "Rearrange Tabs",
  "optional_permissions": ["tabs"],
  "background": {
    "scripts": ["advrearrange.js"],
    "persistent": false
  },
  "commands": {
    "move-tab-left": {
      "suggested_key": {
        "default": "Shift+Alt+Left",
        "windows": "Shift+Alt+Left",
        "mac": "MacCtrl+Shift+Left"
      },
      "description": "Move active tab to left"
    },
    "move-tab-right": {
      "suggested_key": {
        "default": "Shift+Alt+Right",
        "windows": "Shift+Alt+Right",
        "mac": "MacCtrl+Shift+Right"
      },
      "description": "Move active tab to right"
    },
    "move-tab-first": {
      "suggested_key": {
        "default": "Shift+Alt+1",
        "windows": "Shift+Alt+1",
        "mac": "MacCtrl+Shift+1"
      },
      "description": "Move active tab to first"
    },
    "close-duplicate-tabs": {
      "suggested_key": {
        "default": "Shift+Alt+K",
        "windows": "Shift+Alt+K",
        "mac": "MacCtrl+Shift+K"
      },
      "description": "Close duplicate tabs leaving just the most recently loaded"
    }
  },
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "page_action": {
  },
  // "browser_action": {
  //  "default_icon": "icon16.png"
  // },
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
